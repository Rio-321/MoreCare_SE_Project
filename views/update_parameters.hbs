                        <div class="Shift_input" style="position: absolute;left: 690px; top: 60px;">
                            {{!-- <input type="text" name="Shift" class="form-control" placeholder="Enter Shift"
                                id="Shift" style="width:180px"> --}}
                            <select class="form-control" id="Shift" name="Shift" style="width:180px">

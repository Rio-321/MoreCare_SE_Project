<script>

    function myFunction() {
        alert("Are You Sure You Want To Log Out?");
    }


    function myFunction1(event) {
        event.preventDefault();
        swal({
            title: "Are you sure?",
            text: "Do you want to submit parameters?",
            icon: "warning",
            button: "Ok",
        }).then(function () {
            document.theForm.submit();
        });
    }
</script>
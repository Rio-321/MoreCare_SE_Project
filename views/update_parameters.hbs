                        <div class="Temperature_input" style="position: absolute;left: 450px; top:220px">
                            <input type="text" style="width:220px" class="form-control" id="Temperature"
                                placeholder="Enter Body Temperature" name="Temperature">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="BloodPressure_label" for="BloodPressure"
                            style="position: absolute; left: 290px;top: 273px;">Blood Pressure : </label>
                        <div class="BloodPressure_input" style="position: absolute;left: 450px;top:270px">
                            <input type="text" style="width:220px" class="form-control" id="BloodPressure"
                                placeholder="Enter  Blood Pressure" name="BloodPressure">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="HeartRate_label" for="HeartRate"
                            style="position: absolute; left: 290px;top: 323px;">HeartRate : </label>
                        <div class="HeartRate_input" style="position: absolute;left: 450px;top:320px">
